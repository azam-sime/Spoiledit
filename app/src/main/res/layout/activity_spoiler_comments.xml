<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="8dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                android:background="#F8F8F8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?actionBarSize"
                    android:paddingTop="@dimen/spacing_8"
                    android:paddingBottom="@dimen/spacing_8"
                    android:paddingStart="@dimen/spacing_24"
                    android:paddingEnd="@dimen/spacing_24"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:riv_oval="true"
                        android:src="@drawable/popcorn"
                        android:id="@+id/riv_user"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_8"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_4"
                            tools:text="Tony Abbott"
                            android:textSize="@dimen/text_18"
                            android:maxLines="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/tv_username"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:layout_marginStart="@dimen/spacing_4"
                            tools:text="03 Feb, 2020"
                            android:maxLines="2"
                            android:fontFamily="@font/montserrat_medium"
                            android:id="@+id/tv_date"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_8"
                            android:layout_marginStart="@dimen/spacing_4"
                            tools:text="The surviving Resistance faces the First Order once again as the jurney. The surviving Resistance faces the First Order once again as the jurney."
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/text_12"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/tv_spoiler"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F1F1F1"
                    android:layout_marginTop="@dimen/spacing_4"
                    android:layout_marginBottom="@dimen/spacing_4"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_marginEnd="@dimen/spacing_16"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_8"
                    android:paddingBottom="@dimen/spacing_8"
                    android:paddingStart="@dimen/spacing_24"
                    android:paddingEnd="@dimen/spacing_24"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment"
                        android:maxLines="2"
                        android:fontFamily="@font/montserrat_medium"
                        android:drawableStart="@android:drawable/sym_action_chat"
                        android:drawablePadding="@dimen/spacing_8"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:id="@+id/tv_comment"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="(285)"
                        android:maxLines="2"
                        android:fontFamily="@font/montserrat_medium"
                        android:drawableStart="@drawable/thumbs_up"
                        android:drawablePadding="@dimen/spacing_8"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:id="@+id/tv_thumbs_up"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="(567)"
                        android:maxLines="2"
                        android:fontFamily="@font/montserrat_medium"
                        android:drawableStart="@drawable/thumbs_down"
                        android:drawablePadding="@dimen/spacing_8"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:id="@+id/tv_thumbs_down"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/toolbar_back_only" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

<!--    <androidx.core.widget.NestedScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:fillViewport="true"-->
<!--        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">-->

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_4"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:id="@+id/srl_comments">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_comments"
                tools:listitem="@layout/row_spoiler_comments" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
<!--    </androidx.core.widget.NestedScrollView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_8"
        android:orientation="horizontal"
        android:layout_gravity="bottom" >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="@dimen/spacing_12"
            android:rotation="180"
            android:tint="#FFCD00"
            android:src="@drawable/arrow_circle_right"
            android:background="@drawable/background_circle_fill_eef1f2"
            android:id="@+id/iv_add_files" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/spacing_16"
            android:background="@drawable/background_circle_fill_eef1f2"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginEnd="@dimen/spacing_16"
                android:layout_weight="1"
                android:inputType="text"
                android:hint="@string/type_your_message"
                android:textSize="14sp"
                android:id="@+id/et_message"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="@dimen/spacing_12"
                android:rotation="-90"
                android:tint="#FFCD00"
                android:src="@drawable/arrow_circle_right"
                android:id="@+id/iv_send" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_loading" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>