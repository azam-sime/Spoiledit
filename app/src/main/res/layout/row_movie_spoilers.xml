<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_8"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:riv_oval="true"
            android:src="@drawable/popcorn"
            android:id="@+id/riv_user"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_4"
                tools:text="Tony Abbott"
                android:textSize="@dimen/text_18"
                android:maxLines="1"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorBlack"
                android:id="@+id/tv_username"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:layout_marginStart="@dimen/spacing_4"
                tools:text="03 Feb, 2020"
                android:maxLines="2"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="16sp"
                android:id="@+id/tv_date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:layout_marginStart="@dimen/spacing_4"
                tools:text="The surviving Resistance faces the First Order once again as the jurney."
                android:maxLines="2"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorBlack"
                android:id="@+id/tv_spoiler"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_4"
                android:layout_marginTop="@dimen/spacing_8">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="(285)"
                    android:maxLines="2"
                    android:fontFamily="@font/montserrat_medium"
                    android:drawableStart="@drawable/thumbs_up"
                    android:drawablePadding="@dimen/spacing_8"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:id="@+id/tv_thumbs_up"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="(567)"
                    android:maxLines="2"
                    android:fontFamily="@font/montserrat_medium"
                    android:drawableStart="@drawable/thumbs_down"
                    android:drawablePadding="@dimen/spacing_8"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:id="@+id/tv_thumbs_down"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:progressBarStyleLarge"
        android:layout_gravity="center"
        android:id="@+id/pb_loading" />
</FrameLayout>